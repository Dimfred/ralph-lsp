<idea-plugin>
    <id>org.alephium.ralph.lsp</id>
    <name>Ralph LSP</name>
    <version>0.0.1-SNAPSHOT</version>
    <vendor>Alephium</vendor>

    <description>LSP for Ralph - The smart contract programming language for the Alephium blockchain</description>

    <idea-version since-build="231.0"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.properties</depends>
    <depends>com.intellij.modules.ultimate</depends>

    <extensions defaultExtensionNs="com.intellij">
        <platform.lsp.serverSupportProvider
                implementation="org.alephium.ralph.lsp.plugin.intellij.RalphLspServerSupportProvider"/>
    </extensions>

</idea-plugin>
